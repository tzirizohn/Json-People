                        <input type="text" id="firstname-modal"  placeholder="First Name" class="form-control" />
                        <input type="text" id="lastname-modal" placeholder="Last Name" class="form-control" />
                        <input type="text" id="age-modal" placeholder="Age" class="form-control" />
                        <input type="hidden" id="editid" />
                </div>
                <div class="modal-footer">
                    <button type="button" data-id="id" id="update" class="btn btn-primary">Update</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
